<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :store %><br>
    <%= f.text_field :store %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <p><h1> Item Fields </h1>
  <% @list.items.each_with_index do |item, index| %>
  <%= f.fields_for "items[#{index}]", item do |i| %>
    <div class="field">
      <%= i.label :name %>
      <%= i.text_field :name %>
      <%= i.label :price %>
      <%= i.number_field :price%>
      <%= i.label :qty %>
      <%= i.number_field :qty %>
      <br>
    </div>
  <% end %>
  <% end %></p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
