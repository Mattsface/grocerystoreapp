<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :store %><br>
    <%= f.text_field :store %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :number_of_items %><br>
    <%= f.number_field :number_of_items %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <p><h1> Item Fields </h1>
  <%= f.fields_for :items, Item.new do |i| %>
    <div class="field">
      <%= i.label :name %><br>
      <%= i.text_field :name %>

      <% if i.object.persisted? %>
      <%= i.check_box :_destroy %>
      <%= i.label :_destroy, "Destroy" %>
    <% end %>
    </div>
  <% end %></p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
